<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.PhotoRankingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#303030"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:src="@drawable/gold_trophy" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:src="@drawable/silver_trophy" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:src="@drawable/bronze_trophy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#303030"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageFirst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.45"
            android:background="?android:selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@drawable/arenaclock" />

        <ImageView
            android:id="@+id/imageSecond"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.45"
            android:background="?android:selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@drawable/arenaclock" />

        <ImageView
            android:id="@+id/imageThird"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.45"
            android:background="?android:selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@drawable/arenaclock" />

    </LinearLayout>

    <GridView
        android:id="@+id/photoRanking_grid"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.45"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="2dp">

    </GridView>

</LinearLayout>