<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:background="#FFF">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:cardCornerRadius="20dp"
        android:elevation="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#a0a1a2">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1.2"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/profilepic_default"/>
        </android.support.v7.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="0.2">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user"/>

                <TextView
                    android:layout_width="110dp"
                    android:id="@+id/usernameText"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="#FFF"/>

                <ImageView android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/location" />

                <TextView
                    android:layout_width="80dp"
                    android:id="@+id/locationText"
                    android:layout_height="wrap_content"
                    android:text="La Vila, EspaÃ±a"
                    android:layout_gravity="center"
                    android:layout_margin="9dp"
                    android:textSize="18dp"
                    android:textColor="#FFF"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.1"
                    app:cardBackgroundColor="#8F8F8F"
                    app:cardCornerRadius="40dp">

                <ImageButton  android:id="@+id/ib_profile_logros"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/award"
                    android:background="?android:selectableItemBackground"
                    />
                </android.support.v7.widget.CardView>
            </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>



    <GridView
        android:id="@+id/profile_grid"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.45"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="2dp"/>


</LinearLayout>